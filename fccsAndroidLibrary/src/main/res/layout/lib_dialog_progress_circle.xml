<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="horizontal" >

    <com.fccs.library.widget.circleprogress.CircleProgressBar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cpb_progress"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:mlpb_background_color="@color/transparent"
        app:mlpb_enable_circle_background="false"
        app:mlpb_progress_color="@color/green_500" />

    <TextView
        android:id="@+id/txt_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/lib_activity_margin"
        android:layout_marginLeft="@dimen/lib_activity_margin"
        android:text=""
        android:textSize="16sp" />

</LinearLayout>